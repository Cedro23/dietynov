<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MyAccountActivity"
    tools:showIn="@layout/app_bar_my_account">

    <LinearLayout
        android:id="@+id/LO-uberlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="25dp"
        android:paddingTop="50dp"
        android:paddingEnd="25dp"
        tools:layout_editor_absoluteX="126dp"
        tools:layout_editor_absoluteY="72dp">

        <LinearLayout
            android:id="@+id/LO-dob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TV-dob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date de naissance"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/ET-dob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="jj/mm/aaaa"
                android:inputType="date" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LO-height"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TV-height"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Taille (cm)"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/ET-height"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="150"
                android:inputType="number"
                android:textColorHint="@android:color/darker_gray" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LO-weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TV-weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Poids de dÃ©part (kg)"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/ET-weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="45"
                android:inputType="numberDecimal"
                android:textColorHint="@android:color/darker_gray" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LO-sexe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TV-sexe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sexe"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <LinearLayout
                android:id="@+id/LO-sexe_radiobutton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RadioGroup
                    android:id="@+id/RG-sexe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/line0"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/RB-sexe_f"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="F" />

                    <RadioButton
                        android:id="@+id/RB-sexe_h"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="H" />
                </RadioGroup>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>